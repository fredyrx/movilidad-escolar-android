<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.ramos.fredy.goschool.activities.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_bus_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go School"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <include layout="@layout/content_login" />

    <Button
        android:id="@+id/client_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Client Sign Up"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <Button
        android:id="@+id/driver_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Sign Up"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>
